{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends":
    [
      "config:recommended",
      "docker:enableMajor",
      ":timezone(Europe/Tallinn)",
      ":dependencyDashboard",
      ":disableRateLimiting",
      ":semanticCommits",
      ":semanticCommitScopeDisabled",
      "github>sergelogvinov/containers//.github/renovate/customManagers.json5",
      "github>sergelogvinov/containers//.github/renovate/semanticCommits.json5",
      "github>sergelogvinov/containers//.github/renovate/groups.json5",
    ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "prHeader": "Update Request | Renovate Bot",
  "suppressNotifications": ["prEditedNotification", "prIgnoreNotification"],
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "rebaseWhen": "conflicted",
  "ignorePaths": [],
  "packageRules": [
    {
      "matchManagers": ["dockerfile", "regex"],
      "groupName": "{{depName}}"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["golang"],
      "major": {
          "enabled": false
      },
      "minor": {
          "enabled": false
      }
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["node"],
      "major": {
          "enabled": false
      },
      "minor": {
          "enabled": false
      }
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["postgres"],
      "allowedVersions": "<=16"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["mongo"],
      "allowedVersions": "<=7"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ubuntu"],
      "matchFileNames": ["mongosqld\/Dockerfile","mongosync\/Dockerfile"],
      "allowedVersions": "<=20"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["redis"],
      "matchFileNames": ["keydb\/Dockerfile"],
      "allowedVersions": "<=6"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["amazon/aws-cli"],
      "matchUpdateTypes": ["patch"],
      "enabled": false
    }
  ]
}
