{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Talos Group",
      "groupName": "Talos",
      "matchPackagePatterns": [
        "siderolabs/talosctl",
        "siderolabs/installer"
      ],
      "matchDatasources": [
        "docker"
      ],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true
    },
    {
      "description": "Kubernetes Group",
      "groupName": "Kubernetes",
      "matchPackagePatterns": [
        "rancher/kubectl"
      ],
      "matchDatasources": [
        "docker"
      ],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    },
    {
      "description": "AWS Group",
      "groupName": "AWS",
      "matchPackagePatterns": [
        "amazon/aws-cli"
      ],
      "matchDatasources": [
        "docker"
      ],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    }
  ]
}